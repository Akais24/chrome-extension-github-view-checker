{
    "manifest_version": 3,
    "name": "GitHub PR File Page Button Inserter",
    "version": "0.1.0",
    "description": "Inserts a custom button on GitHub pull request file pages.",
    "permissions": [],
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*/*/pull/*/files"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
